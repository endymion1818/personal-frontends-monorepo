---
const { embed } = Astro.props
---
<div class="overflow-hidden">
  {embed.type === 'youtube' && (
    <iframe class="yt w-full aspect-video" src={embed.link} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  )}
  {embed?.link && embed.type === 'spotify' && (
    <iframe class="sp" style="border-radius:12px" src={embed.link} width="100%" height="352" frameborder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
)}
</div>
