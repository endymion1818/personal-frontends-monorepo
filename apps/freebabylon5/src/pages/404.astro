---
import HeaderApple from "../images/s7/header_apple.png"
import IconDisk from "../images/s7/icon_disk.png"
import IconDiskSelected from "../images/s7/icon_disk.png"
import IconTrash from "../images/s7/icon_trash.png"
import IconTrashSelected from "../images/s7/icon_trash_selected.png"
---
	<body>
		<header>
			<div class="container">
				<nav class="menu">
					<ul>
						<li><a href="/" class="icon header-icon-apple" ><img src={HeaderApple} alt=""/></a></li>
						<li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
						<li><a href="/links">Links</a></li>
						<li><a href="/articles">Articles</a></li>
						<li><a href="/contact">Contact</a></li>
					</ul>
				</nav>
			</div>
		</header>

		<div class="desktop">
			<div class="icon">
				<a href="#window-about">
					<img class="icon-main" src={IconDisk} alt="">
					<img class="icon-selected" src={IconDiskSelected} alt="">
				</a>
				<span class="caption">Macintosh HD</span>
			</div>
			<div class="icon">
				<a href="#window-test">
					<img class="icon-main" src={IconTrash} alt="">
					<img class="icon-selected" src={IconTrashSelected} alt="">
				</a>
				<span class="caption">Trash</span>
			</div>
      <div id="window-about" class="window">
        <div class="window-title">
          <div class="btn-close"></div>
          <span class="title">About This Macintosh</span>
          <div class="btn-maximize"></div>
          <br/>
          <h1>404</h1>
          Oops! It looks like you're not meant to be here.
          <br /><br />
          <a href="/">Please go Home</a>
        </div>
      </div>
    </div>

	</body>

<style is:global>
  body{
	background: url("/s7images/bg_tile.png") repeat fixed;
	font-family: 'Chicago', sans-serif;
	font-size: 14px;
  height: 100vh;
  height: -webkit-fill-available;
  width: 100vw;
}

.container{
	width: 960px;
	margin: 0 auto;
}

a{
	text-decoration: none;
}

header{
	top: 0;
	left: 0;
	width: 100%;
	height: 30px;
	background-color: #000;
	line-height: 19px;
	z-index: 999;
	position: relative;
	display: flex;
  border-bottom: 1px solid #000;
}

header>.container{
	min-width: 100vw;
	height: auto;
	line-height: 19px;
	font-size: 11px;
	font-family: 'Chicago', sans-serif;
	margin: 0;
	background-color: #fff;
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
}

header img.icon{
	height: 19px;
	width: 19px;
	vertical-align: middle;
}

header .menu{
	float: left;
	margin: 0 7px;
}

header .menu.right{
	float: right;
}

header .menu ul{
	padding: 0;
	margin: 0;
  margin-top: 6px;
  display: flex;
  align-items: flex-end;
}

header .menu li{
	display: inline-block;
}
img {
  margin: 0 auto;
}

header .menu li>a{
	color: #000;
	padding: 0 7px;
}

header .menu li.disabled a{
	color: #848484;
}

/* Desktop with icons, etc. */
.desktop{
	display: block;
	padding: 25px 10px;
  height: 100vh;
  height: -webkit-fill-available;
}

.desktop>.icon{
	display: block;
	float: right;
	clear: both;
	text-align: center;
	margin-bottom: 20px; /* TODO: delete this, will be overidden */
}

.desktop>.icon .icon-selected{
	display: none;
}

.desktop>.icon:hover .icon-selected{
	display: inline;
}

.desktop>.icon:hover .icon-main{
	display: none;
}

.desktop>.icon span.caption{
	display: block;
	padding: 0 2px;
	height: 13px;
	line-height: 12px;
	font-size: 11px;
	font-weight: 400;
	background-color: #fff;
	overflow: hidden;
}

/* Windows (nope, not an OS) */
.window {
	position: fixed;
	border: 1px solid #525252;
	border-right-width: 2px;
	border-bottom-width: 2px;
	background-color: #fff;
	/* Default size & position - will be overidden */
	top: 50px;
	left: 30px;
	width: 300px;
	height: 130px;
}

.window {
	background: url("/s7images/window_titlebg.png") repeat-x #fff;
	border-color: #000;
}

.window>.window-title{
	display: block;
	height: 17px;
	line-height: 17px;
	text-align: center;
	padding: 0 6px;
	border-bottom: 1px solid #000;
	color: #848484;
}

.window-title{
	border-left: 1px solid #ceceff;
	border-right: 1px solid #ceceff;
	color: #000;
}

.window-title > .title{
	padding: 0 7px;
	background-color: #efefef;
}

.window.window-focus>.window-title>a{
	padding: 0 1px;
	height: 11px;
	width: 11px;
	margin-top: 3px;
	background-color: #efefef;
	position: relative;
}

>a.btn-close{
	float: left;
}

>a.btn-close:after {
	background: url("/s7images/window_btn_close.png") no-repeat #efefef;
	display: block;
	position: absolute;
	width: 11px;
	height: 11px;
	left: 1px;
	content: " ";
}

a.btn-maximize {
	float: right;
  position: relative;
}

a.btn-maximize:after{
	background: url("/s7images/window_btn_maximize.png") no-repeat #efefef;
	display: block;
	position: absolute;
	width: 11px;
	height: 11px;
	left: 1px;
	content: " ";
}

@font-face {
  font-family: 'Chicago';
  src: url('/fonts/ChicagoFLF.woff2')  format('woff2');
}
</style>
