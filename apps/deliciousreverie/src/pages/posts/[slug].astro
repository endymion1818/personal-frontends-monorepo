---
import { RichTextRenderer } from "@frontends/rich-text-renderer"
import { Embeds } from "@frontends/embeds"
import Layout from '../../components/Layout.astro'

export async function getStaticPaths() {
  const data = await fetch(
    process.env.WEBINY_READ_URL,
    {
      method: 'POST',
      headers: {
        'Authorization': `Bearer ${process.env.WEBINY_ACCESS_TOKEN}`,
        'Content-Type' : 'application/json'
      },
      body: JSON.stringify({
        query: `
          {
            listPosts(limit: 200) {
              data {
                id
                title
                slug
                description
                body
                publishDate
                shareCard
                canonicalLink
                embed {
                  link
                  type
                }
                tags {
                  title
                  slug
                  description
                }
              }
              error {
                message
              }
            }
          }
        `,
      }),
    }
  ).then (
    response => response.json()
  )

  return data.data.listPosts.data.map((post) => {
    return {
      params: { slug: post.slug },
      props: { post },
    };
  });
}
const { post } = Astro.props;
---
<Layout pageTitle="home" pageDescription={post.description} canonical={post.canonicalLink} slug={post.slug}>
    <h1 class="text-4xl">{post.title}</h1>
    {post.embed?.link && (
      <Embeds embed={post.embed} />
  )}
    <RichTextRenderer data={post.body} />
</Layout>
