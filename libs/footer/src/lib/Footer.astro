---
interface Props {
  footerMenuItems: Array<{
    title: string,
    items: Array<{
      title: string,
      link: string
    }>
  }>;
  logo?: string;
  title: string;
  url: string,
  withPadding?: boolean;
  acknowledgementText: string;
  socialLinks: {
    [key: string]: {
      title: string,
      link: string
    }
  }
}

const { footerMenuItems, logo, title, acknowledgementText, socialLinks, url, withPadding } = Astro.props;


const footerClass = withPadding ? 'px-6' : '';
---
<footer class="bg-accent text-base-content">
  <div class:list={["py-10 container mx-auto", footerClass]}>
    <div class="footer gap-x-16 my-10">
      <div class=" max-w-md">
        <a class="items-center grid-flow-col" href="/">
          {logo ? <img class="max-w-xs" src={logo}> : <span class="font-display text-secondary text-3xl tracking-wide">{title}</span>}
        </a>
        {acknowledgementText}
      </div>
      {footerMenuItems?.map(itemGroup => (
          <div>
            <span class="footer-title">{itemGroup.title}</span>
            <ul class="list-inside">
            {itemGroup.items.map(item => (
              <li><a href={item.link} class="link link-hover sm:p-2 sm:inline-block">{item.title}</a></li>
            ))}
            </ul>
          </div>
      ))}
    </div>
    <div class="footer items-center bg-grey-900 text-neutral-content">
      {socialLinks ? (
        <div class="grid-flow-col gap-4 md:place-self-center md:justify-self-end">
