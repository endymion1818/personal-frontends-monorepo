---
import Layout from '../../components/Layout.astro'
import getTagsArrayFromPostList from '../../components/getTagsArrayFromPostList'
interface Props {
    listPosts: {
      data: Array<{
        id: string
        title: string
        slug: string
        description: string
        tags: Array<{
          title: string
          slug: string
        }>
      }>
    }
  }

const response = await fetch(
    process.env.WEBINY_READ_URL,
  {
    method: 'POST',
    headers: {
      'Authorization': `Bearer ${process.env.WEBINY_ACCESS_TOKEN}`,
      'Content-Type' : 'application/json'
    },
    body: JSON.stringify({
      query: `
        {
          listPosts {
            data {
              id
              title
              slug
              description
              tags {
                title
                slug
                description
              }
            }
          }
        }
      `
    }),
  }
);
const { data } = await response.json()

const content = getTagsArrayFromPostList(data)

---
<Layout pageTitle="archive" pageDescription="Archive of all articles published on this blog">
  <main class="container max-w-screen-sm">
    <div class="my-5">
      <h1 class="text-2xl">All tags:</h1>
      {content.map((tag) => (
          <article class="card bg-secondary">
            <div class="card-body">
              <h2 class="card-title text-inherit">
                <a href={`/post/${tag.slug}`}>{tag.title}</a>
              </h2>
              {tag.description && <p class="text-inherit">{tag.description}</p>}
              {tag.posts.length ? (
                <ul class="list-disc list-inside">
                  {tag.posts.map(post => (
                    <li><a class="hover:underline py-2 px-1 inline-block" href={`/post/${post.slug}`}>{post.title}</a></li>
                  ))}
                </ul>
              ) : null}
            </div>
          </article>
      ))}
    </div>
  </main>
</Layout>
