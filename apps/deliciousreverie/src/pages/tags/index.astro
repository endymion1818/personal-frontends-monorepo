---
import { ArticleCard } from '../../../../../libs/article-card/src'
import Layout from '../../components/Layout.astro'

interface DataProps {
    listPosts: {
      data: Array<{
        id: string
        title: string
        slug: string
        description: string
        tags: Array<{
          title: string
          slug: string
        }>
      }>
    }
  }

const response = await fetch(
    process.env.WEBINY_READ_URL,
  {
    method: 'POST',
    headers: {
      'Authorization': `Bearer ${process.env.WEBINY_ACCESS_TOKEN}`,
      'Content-Type' : 'application/json'
    },
    body: JSON.stringify({
      query: `
        {
          listPosts {
            data {
              id
              title
              slug
              description
              tags {
                title
                slug
              }
            }
          }
        }
      `
    }),
  }
);
const { data } = await response.json()
// console.log(JSON.stringify(data.listPosts.data))

const tagsArray = data.listPosts.data.reduce((prev, { tags, ...post }, i) => {
  tags.forEach(tag => {
    prev.set(tag.slug, {
      title: tag.title,
      slug: tag.slug,
      posts: [...(prev.get(tag.slug)?.posts || []), post],
    })
  });
  return prev;
}, new Map());

const content = Array.from(tagsArray.values())

---
<Layout pageTitle="archive" pageDescription="Archive of all articles published on this blog">
  <main class="container max-w-screen-sm">
    <div class="my-5">
      <h1 class="text-2xl">All tags:</h1>
      {content.map(tag => (
        <div>
          <h2 class="text-2xl">tag: {tag.title}</h2>
          {tag.posts.map(post => (
            <div>
              <h3 class="text-l"><a href={`/post/${post.slug}`}>{post.title}</a></h3>
            </div>
          ))}
        </div>
      ))}
    </div>
  </main>
</Layout>
