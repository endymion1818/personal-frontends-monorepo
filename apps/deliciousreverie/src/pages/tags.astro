---
import { ArticleCard } from '../../../../libs/article-card/src'
import Layout from '../components/Layout.astro'

interface DataProps {
    listPosts: {
      data: Array<{
        id: string
        title: string
        slug: string
        description: string
        tags: Array<{
          title: string
          slug: string
        }>
      }>
    }
  }

const response = await fetch(
    process.env.WEBINY_READ_URL,
  {
    method: 'POST',
    headers: {
      'Authorization': `Bearer ${process.env.WEBINY_ACCESS_TOKEN}`,
      'Content-Type' : 'application/json'
    },
    body: JSON.stringify({
      query: `
        {
          listPosts {
            data {
              id
              title
              slug
              description
              tags {
                title
                slug
              }
            }
          }
        }
      `
    }),
  }
);
const { data } = await response.json()
// console.log(JSON.stringify(data.listPosts.data))

const tagsArray = []

const sortedItems = (items) => items.map(post => {
  post.tags.map(tag => {
    tagsArray.forEach((element, index) => {
      if(element.slug === tag.slug) {
        element.posts.push(post)
      }
    })
    tagsArray.push({
      tag: tag.title,
      slug: tag.slug,
      posts: [{...post}]
    })
  })
})

sortedItems(data.listPosts.data)

console.log(JSON.stringify(tagsArray))
---
<Layout pageTitle="archive" pageDescription="Archive of all articles published on this blog">
  <main class="container max-w-screen-sm">
    <div class="my-5">
      <h1 class="text-2xl">All tags:</h1>
    </div>
  </main>
</Layout>
