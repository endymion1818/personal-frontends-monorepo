---
import Layout from '../../components/Layout.astro'

interface DataProps {
    listPosts: {
      data: Array<{
        id: string
        title: string
        slug: string
        description: string
        tags: Array<{
          title: string
          slug: string
        }>
      }>
    }
  }

const response = await fetch(
    process.env.WEBINY_READ_URL,
  {
    method: 'POST',
    headers: {
      'Authorization': `Bearer ${process.env.WEBINY_ACCESS_TOKEN}`,
      'Content-Type' : 'application/json'
    },
    body: JSON.stringify({
      query: `
        {
          listPosts {
            data {
              id
              title
              slug
              description
              tags {
                title
                slug
              }
            }
          }
        }
      `
    }),
  }
);
const { data } = await response.json();

let accumulatedTags = []

const formattedTags: DataProps = data.listPosts.data.reduce(
  (previousValue, currentValue) => {
    accumulatedTags.push(currentValue.tags)
  },
  []
);

const formattedTagsFlat = accumulatedTags.flat()

console.log('formattedTagsFlat', formattedTagsFlat);

